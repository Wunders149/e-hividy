<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= isEdit ? 'Edit Product' : 'Add New Product' %></title>
  <link rel="stylesheet" href="/admin.css">
</head>
<body>
  <button class="menu-toggle" onclick="toggleAdminMenu()">â˜°</button>
  
  <div class="admin-container">
    <aside class="admin-sidebar" id="adminSidebar">
      <h2>ðŸ”§ Admin</h2>
      <ul>
        <li><a href="/admin/dashboard">ðŸ“Š Dashboard</a></li>
        <li><a href="/admin/products" class="active">ðŸ“¦ Products</a></li>
        <li><a href="/admin/orders">ðŸ“‹ Orders</a></li>
        <li><a href="/admin/logout">ðŸšª Logout</a></li>
      </ul>
    </aside>

    <main class="admin-main">
      <div class="dashboard-header">
        <h1><%= isEdit ? 'Edit Product' : 'Add New Product' %></h1>
      </div>

      <div class="admin-section" style="max-width: 600px;">
        <% if (message) { %>
          <div class="message <%= message.includes('Error') ? 'error' : 'success' %>"><%= message %></div>
        <% } %>

        <form method="POST" enctype="multipart/form-data">
          <div class="form-group">
            <label for="name">Product Name *</label>
            <input type="text" id="name" name="name" value="<%= typeof product !== 'undefined' && product ? product.name : '' %>" required>
          </div>

          <div class="form-group">
            <label for="description">Description *</label>
            <textarea id="description" name="description" required><%= typeof product !== 'undefined' && product ? product.description : '' %></textarea>
          </div>

          <div class="form-group">
            <label for="price">Price ($) *</label>
            <input type="number" id="price" name="price" step="0.01" value="<%= typeof product !== 'undefined' && product ? parseFloat(product.price) : '' %>" required>
          </div>

          <div class="form-group">
            <label for="stock">Stock Quantity *</label>
            <input type="number" id="stock" name="stock" value="<%= typeof product !== 'undefined' && product ? product.stock : '' %>" required>
          </div>

          <div class="form-group">
            <label for="image">Product Image</label>
            <% if (isEdit && product && product.image) { %>
              <div style="margin-bottom: 10px;">
                <img src="<%= product.image %>" alt="Current Image" style="max-width: 100px; display: block; margin-bottom: 5px;">
                <small>Current image: <%= product.image %></small>
              </div>
            <% } %>
            <input type="file" id="image" name="image" accept="image/*">
          </div>

          <div class="form-buttons">
            <button type="submit" class="admin-btn" style="flex: 1;">
              <%= isEdit ? 'âœï¸ Update Product' : 'âœ¨ Add Product' %>
            </button>
            <a href="/admin/products" class="admin-btn admin-btn-secondary" style="flex: 1; text-align: center;">Cancel</a>
          </div>
        </form>
      </div>
    </main>
  </div>

  <script>
    function toggleAdminMenu() {
      const sidebar = document.getElementById('adminSidebar');
      sidebar.classList.toggle('active');
    }

    document.querySelectorAll('#adminSidebar a').forEach(link => {
      link.addEventListener('click', () => {
        document.getElementById('adminSidebar').classList.remove('active');
      });
    });
  </script>
</body>
</html>
