<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Order Details</title>
  <link rel="stylesheet" href="/admin.css">
</head>
<body>
  <button class="menu-toggle" onclick="toggleAdminMenu()">â˜°</button>
  
  <div class="admin-container">
    <aside class="admin-sidebar" id="adminSidebar">
      <h2>ğŸ”§ Admin</h2>
      <ul>
        <li><a href="/admin/dashboard">ğŸ“Š Dashboard</a></li>
        <li><a href="/admin/products">ğŸ“¦ Products</a></li>
        <li><a href="/admin/orders" class="active">ğŸ“‹ Orders</a></li>
        <li><a href="/admin/logout">ğŸšª Logout</a></li>
      </ul>
    </aside>

    <main class="admin-main">
      <div class="dashboard-header">
        <div>
          <h1>Order #<%= order.id %></h1>
          <span class="status-badge status-<%= order.status %>" style="margin-left: 1rem;">
            <%= order.status %>
          </span>
        </div>
        <a href="/admin/orders" class="admin-btn admin-btn-secondary">â† Back to Orders</a>
      </div>

      <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 2rem; margin-bottom: 2rem;">
        <div class="admin-section">
          <h2>Customer Information</h2>
          <div style="padding: 1rem 0;">
            <p><strong>Name:</strong> <%= customer.name %></p>
            <p><strong>Email:</strong> <%= customer.email %></p>
            <p><strong>Address:</strong> <%= customer.address || 'N/A' %></p>
            <p><strong>Phone:</strong> <%= customer.phone || 'N/A' %></p>
          </div>
        </div>

        <div class="admin-section">
          <h2>Order Information</h2>
          <div style="padding: 1rem 0;">
            <p><strong>Order Date:</strong> <%= new Date(order.created_at).toLocaleString() %></p>
            <p><strong>Status:</strong> <%= order.status %></p>
            <p><strong>Total Amount:</strong> <span style="font-size: 1.3rem; color: #28a745; font-weight: bold;">$<%= parseFloat(order.total_amount).toFixed(2) %></span></p>
          </div>
        </div>
      </div>

      <div class="admin-section">
        <h2>Order Items</h2>
        <% if (items.length > 0) { %>
          <table>
            <thead>
              <tr>
                <th>Product</th>
                <th>Quantity</th>
                <th>Unit Price</th>
                <th>Subtotal</th>
              </tr>
            </thead>
            <tbody>
              <% items.forEach(item => { %>
                <tr>
                  <td><strong><%= item.name %></strong></td>
                  <td><%= item.quantity %></td>
                  <td>$<%= parseFloat(item.price).toFixed(2) %></td>
                  <td>$<%= (parseFloat(item.price) * item.quantity).toFixed(2) %></td>
                </tr>
              <% }); %>
            </tbody>
          </table>

          <div style="margin-top: 2rem; text-align: right; padding: 1.5rem; background-color: #f8f9fa; border-radius: 4px;">
            <div style="margin-bottom: 0.75rem;">
              <span style="font-weight: 600;">Subtotal:</span>
              <span style="float: right;">$<%= items.reduce((sum, item) => sum + (parseFloat(item.price) * item.quantity), 0).toFixed(2) %></span>
            </div>
            <div style="border-top: 2px solid #ddd; padding-top: 0.75rem; font-size: 1.2rem; font-weight: bold; color: #28a745;">
              <span>Total:</span>
              <span style="float: right;">$<%= parseFloat(order.total_amount).toFixed(2) %></span>
            </div>
          </div>
        <% } else { %>
          <p style="text-align: center; padding: 2rem; color: #999;">No items in this order</p>
        <% } %>
      </div>
    </main>
  </div>

  <script>
    function toggleAdminMenu() {
      const sidebar = document.getElementById('adminSidebar');
      sidebar.classList.toggle('active');
    }

    document.querySelectorAll('#adminSidebar a').forEach(link => {
      link.addEventListener('click', () => {
        document.getElementById('adminSidebar').classList.remove('active');
      });
    });
  </script>
</body>
</html>
