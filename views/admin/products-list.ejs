<%- include('partials/head', { title: 'Products' }) %>
<%- include('partials/sidebar', { activePage: 'products' }) %>

<main class="admin-main">
  <div class="page-header">
    <div>
      <h1><i data-lucide="package"></i> Products</h1>
      <p class="text-muted" style="margin: 0.25rem 0 0 0; font-size: 0.9375rem;">Manage your product catalog and inventory</p>
    </div>
    <div class="page-header-actions">
      <a href="/admin/products/add" class="admin-btn">
        <i data-lucide="plus-circle"></i> Add Product
      </a>
    </div>
  </div>

  <!-- Products Card -->
  <div class="card">
    <div class="card-body" style="padding: 0;">
      <% if (typeof error !== 'undefined' && error) { %>
        <div class="alert alert-error" style="margin: 1.5rem;">
          <i data-lucide="alert-circle"></i> <%= error %>
        </div>
      <% } %>

      <% if (products && products.length > 0) { %>
        <!-- Products Summary -->
        <div class="products-summary">
          <div class="summary-item">
            <span class="summary-label">Total Products</span>
            <span class="summary-value"><%= products.length %></span>
          </div>
          <div class="summary-item">
            <span class="summary-label">In Stock</span>
            <span class="summary-value text-success"><%= products.filter(p => p.stock > 10).length %></span>
          </div>
          <div class="summary-item">
            <span class="summary-label">Low Stock</span>
            <span class="summary-value text-warning"><%= products.filter(p => p.stock > 0 && p.stock <= 10).length %></span>
          </div>
          <div class="summary-item">
            <span class="summary-label">Out of Stock</span>
            <span class="summary-value text-danger"><%= products.filter(p => p.stock === 0).length %></span>
          </div>
        </div>

        <div class="table-responsive">
          <table class="table">
            <thead>
              <tr>
                <th style="width: 60px;">Product</th>
                <th>Product Info</th>
                <th style="width: 120px;">Price</th>
                <th style="width: 150px;">Stock Status</th>
                <th style="width: 100px; text-align: right;">Actions</th>
              </tr>
            </thead>
            <tbody>
              <% products.forEach(product => { %>
                <tr>
                  <td>
                    <div class="product-image-thumb">
                      <% if (product.image) { %>
                        <img src="<%= product.image %>" alt="<%= product.name %>" loading="lazy">
                      <% } else { %>
                        <i data-lucide="image" style="width: 20px; color: var(--gray-400);"></i>
                      <% } %>
                    </div>
                  </td>
                  <td>
                    <div class="product-info">
                      <div class="product-name">
                        <span class="font-semibold"><%= product.name %></span>
                        <span class="product-id">#<%= product.id %></span>
                      </div>
                      <div class="product-description">
                        <%= product.description.length > 80 ? product.description.substring(0, 80) + '...' : product.description %>
                      </div>
                    </div>
                  </td>
                  <td>
                    <span class="price-tag">$<%= parseFloat(product.price).toFixed(2) %></span>
                  </td>
                  <td>
                    <% if (product.stock > 10) { %>
                      <span class="status-badge status-success">
                        <i data-lucide="check-circle"></i>
                        <%= product.stock %> in stock
                      </span>
                    <% } else if (product.stock > 0) { %>
                      <span class="status-badge status-warning">
                        <i data-lucide="alert-circle"></i>
                        Only <%= product.stock %> left
                      </span>
                    <% } else { %>
                      <span class="status-badge status-danger">
                        <i data-lucide="x-circle"></i>
                        Out of stock
                      </span>
                    <% } %>
                  </td>
                  <td>
                    <div class="action-buttons" style="justify-content: flex-end;">
                      <a href="/admin/products/edit/<%= product.id %>"
                         class="btn-action btn-action-edit"
                         title="Edit Product">
                        <i data-lucide="edit-2"></i>
                      </a>
                      <button class="btn-action btn-action-delete"
                              onclick="deleteProduct('<%= product.id %>', '<%= product.name %>')"
                              title="Delete Product">
                        <i data-lucide="trash-2"></i>
                      </button>
                    </div>
                  </td>
                </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
      <% } else { %>
        <div class="empty-state">
          <div class="empty-state-icon-wrapper">
            <i data-lucide="package" class="empty-state-icon"></i>
          </div>
          <h3>No Products Yet</h3>
          <p>Start building your catalog by adding your first product</p>
          <a href="/admin/products/add" class="admin-btn">
            <i data-lucide="plus-circle"></i> Add First Product
          </a>
        </div>
      <% } %>
    </div>
  </div>
</main>

<!-- Delete Confirmation Modal -->
<div class="modal-overlay" id="deleteModal">
  <div class="modal">
    <div class="modal-header">
      <h3><i data-lucide="alert-triangle"></i> Delete Product</h3>
      <button class="modal-close" onclick="closeDeleteModal()">&times;</button>
    </div>
    <div class="modal-body">
      <p>Are you sure you want to delete <strong style="color: var(--primary);"><span id="deleteProductName"></span></strong>?</p>
      <p style="margin-top: 1rem; color: var(--danger); font-size: 0.875rem;">
        <i data-lucide="info" style="width: 14px; height: 14px; vertical-align: middle; margin-right: 4px;"></i>
        This action cannot be undone. All associated data will be permanently removed.
      </p>
    </div>
    <div class="modal-footer">
      <button class="admin-btn admin-btn-secondary" onclick="closeDeleteModal()">
        <i data-lucide="x"></i> Cancel
      </button>
      <button class="admin-btn admin-btn-danger" id="confirmDeleteBtn">
        <i data-lucide="trash-2"></i> Delete Product
      </button>
    </div>
  </div>
</div>

<style>
  .products-summary {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
    gap: 1rem;
    padding: 1.25rem 1.5rem;
    background: linear-gradient(180deg, var(--gray-50) 0%, var(--white) 100%);
    border-bottom: 1px solid var(--gray-200);
  }
  .summary-item {
    text-align: center;
    padding: 0.75rem;
    background: var(--white);
    border-radius: var(--radius-lg);
    border: 1px solid var(--gray-200);
    box-shadow: var(--shadow-xs);
  }
  .summary-label {
    display: block;
    font-size: 0.75rem;
    color: var(--gray-500);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 0.375rem;
  }
  .summary-value {
    display: block;
    font-size: 1.5rem;
    font-weight: 800;
    color: var(--gray-900);
    line-height: 1;
  }
  .product-info { display: flex; flex-direction: column; gap: 0.25rem; }
  .product-name { display: flex; align-items: center; gap: 0.5rem; flex-wrap: wrap; }
  .product-id { font-size: 0.75rem; color: var(--gray-400); font-weight: 500; }
  .product-description { font-size: 0.8125rem; color: var(--gray-500); line-height: 1.4; }
  .price-tag {
    font-size: 1rem;
    font-weight: 700;
    color: var(--gray-900);
    background: var(--gray-50);
    padding: 0.375rem 0.75rem;
    border-radius: var(--radius);
    display: inline-block;
  }
  .empty-state-icon-wrapper {
    width: 80px; height: 80px;
    margin: 0 auto 1.5rem;
    background: var(--primary-light);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .empty-state-icon-wrapper .empty-state-icon { width: 40px; height: 40px; color: var(--primary); }
  @media (max-width: 768px) { .products-summary { grid-template-columns: repeat(2, 1fr); } }
</style>

<script>
  let deleteProductId = null;
  function deleteProduct(id, name) {
    deleteProductId = id;
    document.getElementById('deleteProductName').textContent = name;
    document.getElementById('deleteModal').classList.add('active');
  }
  function closeDeleteModal() {
    document.getElementById('deleteModal').classList.remove('active');
    deleteProductId = null;
  }
  document.getElementById('confirmDeleteBtn').addEventListener('click', function() {
    if (deleteProductId) {
      fetch('/admin/products/delete/' + deleteProductId, { method: 'POST' })
        .then(r => r.json())
        .then(data => {
          if (data.success) { showToast('Product deleted successfully', 'success'); setTimeout(() => location.reload(), 1000); }
          else { showToast('Error deleting product: ' + (data.error || 'Unknown error'), 'error'); }
        })
        .catch(err => { showToast('Error: ' + err.message, 'error'); });
      closeDeleteModal();
    }
  });
  document.getElementById('deleteModal').addEventListener('click', function(e) { if (e.target === this) closeDeleteModal(); });
  document.addEventListener('keydown', function(e) { if (e.key === 'Escape') closeDeleteModal(); });
</script>

<%- include('partials/footer') %>
<%- include('partials/scripts') %>
