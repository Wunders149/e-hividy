<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Products Management</title>
  <link rel="stylesheet" href="/style.css">
  <style>
    body {
      background-color: #f8f9fa;
    }
    
    .admin-container {
      display: grid;
      grid-template-columns: 250px 1fr;
      min-height: 100vh;
    }
    
    .admin-sidebar {
      background-color: #2c3e50;
      color: white;
      padding: 2rem 0;
      position: fixed;
      width: 250px;
      height: 100vh;
      overflow-y: auto;
    }
    
    .admin-sidebar h2 {
      padding: 0 1.5rem;
      margin-bottom: 2rem;
      border-bottom: 2px solid #667eea;
      padding-bottom: 1rem;
    }
    
    .admin-sidebar ul {
      list-style: none;
    }
    
    .admin-sidebar li {
      margin: 0.5rem 0;
    }
    
    .admin-sidebar a {
      display: block;
      padding: 1rem 1.5rem;
      color: #ecf0f1;
      text-decoration: none;
      transition: background-color 0.3s;
    }
    
    .admin-sidebar a:hover,
    .admin-sidebar a.active {
      background-color: #667eea;
      border-left: 3px solid #fff;
    }
    
    .admin-main {
      margin-left: 250px;
      padding: 2rem;
    }
    
    .admin-header {
      background: white;
      padding: 1.5rem;
      border-radius: 8px;
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 2rem;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }
    
    .admin-header h1 {
      margin: 0;
    }
    
    .add-btn {
      background-color: #28a745;
      color: white;
      padding: 0.7rem 1.5rem;
      border-radius: 4px;
      text-decoration: none;
      display: inline-block;
    }
    
    .add-btn:hover {
      background-color: #218838;
    }
    
    .products-table {
      width: 100%;
      background: white;
      border-collapse: collapse;
      border-radius: 8px;
      overflow: hidden;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }
    
    .products-table th,
    .products-table td {
      padding: 1rem;
      text-align: left;
      border-bottom: 1px solid #ddd;
    }
    
    .products-table th {
      background-color: #f9f9f9;
      font-weight: bold;
    }
    
    .products-table tr:hover {
      background-color: #f5f5f5;
    }
    
    .edit-btn {
      background-color: #007bff;
      color: white;
      padding: 0.4rem 0.8rem;
      border-radius: 4px;
      text-decoration: none;
      font-size: 0.9rem;
      margin-right: 0.5rem;
    }
    
    .delete-btn {
      background-color: #dc3545;
      color: white;
      padding: 0.4rem 0.8rem;
      border-radius: 4px;
      border: none;
      cursor: pointer;
      font-size: 0.9rem;
    }
    
    .edit-btn:hover {
      background-color: #0056b3;
    }
    
    .delete-btn:hover {
      background-color: #c82333;
    }
  </style>
</head>
<body>
  <div class="admin-container">
    <div class="admin-sidebar">
      <h2>Admin Panel</h2>
      <ul>
        <li><a href="/admin/dashboard">Dashboard</a></li>
        <li><a href="/admin/products" class="active">Products</a></li>
        <li><a href="/admin/orders">Orders</a></li>
        <li><a href="/">View Store</a></li>
        <li><a href="/admin/logout">Logout</a></li>
      </ul>
    </div>

    <div class="admin-main">
      <div class="admin-header">
        <h1>Products Management</h1>
        <a href="/admin/products/add" class="add-btn">+ Add Product</a>
      </div>

      <% if (products.length > 0) { %>
        <table class="products-table">
          <thead>
            <tr>
              <th>ID</th>
              <th>Name</th>
              <th>Description</th>
              <th>Price</th>
              <th>Stock</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% products.forEach(product => { %>
              <tr>
                <td>#<%= product.id %></td>
                <td><strong><%= product.name %></strong></td>
                <td><%= product.description.substring(0, 50) %>...</td>
                <td>$<%= product.price.toFixed(2) %></td>
                <td><%= product.stock %></td>
                <td>
                  <a href="/admin/products/edit/<%= product.id %>" class="edit-btn">Edit</a>
                  <button class="delete-btn" onclick="deleteProduct('<%= product.id %>')">Delete</button>
                </td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      <% } else { %>
        <p>No products available.</p>
      <% } %>
    </div>
  </div>

  <script>
    function deleteProduct(id) {
      if (confirm('Are you sure you want to delete this product?')) {
        fetch('/admin/products/delete/' + id, {
          method: 'POST'
        })
        .then(response => response.json())
        .then(data => {
          if (data.success) {
            location.reload();
          } else {
            alert('Error deleting product: ' + (data.error || 'Unknown error'));
          }
        })
        .catch(error => alert('Error: ' + error));
      }
    }
  </script>
</body>
</html>
